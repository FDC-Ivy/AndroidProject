<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:padding="15dp"
    android:background="@drawable/testbackground"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/branch_button">

    <ImageView
        android:id="@+id/cart_product_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cart_product_name"
        android:layout_toEndOf="@id/cart_product_image"
        android:textColor="@color/black"
        android:paddingRight="130dp"
        android:textSize="20dp"
        tools:text="Nameaafafafafafafffdfdfdf"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_product_price"
        android:layout_toEndOf="@id/cart_product_image"
        android:layout_below="@id/cart_product_name"
        android:textColor="@color/black"
        android:paddingRight="20dp"
        tools:text="emial@email.com"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_product_qty"
        android:layout_toEndOf="@id/cart_product_price"
        android:layout_below="@id/cart_product_name"
        android:textColor="@color/black"
        tools:text="emial@email.com"/>

    <TextView
        android:id="@+id/cart_product_delete_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Delete"
        android:textColor="@color/purple_700"
        android:paddingRight="25dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/cart_product_name"/>


</RelativeLayout>